@model Mvc_DooarsBangla.Models.ForgetPasswordToEmailModel

@{
    ViewBag.Title = "ForgetPasswordToEmail";
    Layout = "~/Views/Shared/_myLayout_Home.cshtml";
}
<section id="newsSection">
    <div class="jumbotron" style="background-color:#f5fffa">

        <center>
            <i style="color:red; font-size:22px;margin-bottom:30px">@ViewBag.Emsg   </i>
            <i style="color:green; font-size:22px;margin-bottom:30px">@ViewBag.msg</i>
        </center>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <center>
                <fieldset>
                    <legend><h2><b>ENTER ADMIN DETAILS</b></h2></legend>

                    <table>
                        <tr>
                            <td>
                                <b style="color:red;">@Html.ValidationMessageFor(model => model.adminID)</b>
                            </td>
                        </tr>
                        <tr>


                            <td>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.adminID, new { @class = "form-control s-form-v1__input g-radius--left-50", placeholder = "*Admin ID" })
                                </div>
                            </td>
                            <td><div class="form-group"><input type="submit" value="Proceed" class="btn btn-green g-radius--right-50" style="margin-top:5px" /></div></td>

                        </tr>




                    </table>


                </fieldset>
            </center>
        }


    </div>
</section>