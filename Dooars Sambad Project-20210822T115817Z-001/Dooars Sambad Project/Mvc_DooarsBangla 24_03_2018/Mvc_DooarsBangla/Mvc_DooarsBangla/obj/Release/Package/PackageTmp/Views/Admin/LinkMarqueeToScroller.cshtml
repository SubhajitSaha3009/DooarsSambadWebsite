@model Mvc_DooarsBangla.Models.LinkMarqueeToScrollerModel

@{
    ViewBag.Title = "LinkMarqueeToScroller";
    Layout = "~/Views/Shared/_myLayoutPage_Admin.cshtml";
}

<script>
    $(document).on('invalid-form.validate', 'form', function () {
        var button = $(this).find('input[type="submit"]');
        setTimeout(function () {
            button.removeAttr('disabled');
        }, 1);
    });
    $(document).on('submit', 'form', function () {
        var button = $(this).find('input[type="submit"]');
        setTimeout(function () {
            button.attr('disabled', 'disabled');
        }, 0);
    });
</script>



<div class="jumbotron" style="background-color:#f5fffa">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <center> <legend>Link Marquee To Scroller</legend></center>
            <table style="width:50%;" align="center">
                <tr>
                    <td>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MarqueeNewsID)
                        </div>
                    </td>
                    <td>

                        <div class="form-group">
                            @Html.TextBox("MarqueeNewsID", (int)ViewBag.id, new { @class = "form-control", @readonly = "readonly" })

                        </div>
                    </td>
                    <td>
                        <b style="color:red;">
                            @Html.ValidationMessageFor(model => model.MarqueeNewsID)
                        </b>
                    </td>
                </tr>
                <tr>
                    <td>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ScrImageID)
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.ScrImageID, new { @class = "form-control" })

                    </div>
                </td>
                <td><b style="color:red;">@Html.ValidationMessageFor(model => model.ScrImageID)</b></td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <p>
                        <input type="submit" class="btn btn-primary" value="Link" />

                    </p>
                </td>
            </tr>

        </table>


    </fieldset>
    }

</div>