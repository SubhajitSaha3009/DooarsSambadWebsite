@model IEnumerable<Mvc_DooarsBangla.Models.NewsPaperPageModel>

@{
    ViewBag.Title = "GetAllNewsPaperPage";
    Layout = "~/Views/Shared/_myLayoutPage_Admin.cshtml";
}


<div class="jumbotron" style="background-color:#f5fffa">

    <center>

        <i style="font-size:24px; color:green">@ViewBag.delmsg</i>
        <i style="font-size:24px; color:red">@ViewBag.delerrmsg</i>
        <div style="height:5px;"> </div>
    </center>


    <center>
        <h2 style="margin-bottom:25px">News Pages</h2>
        <div style="overflow-x:scroll;width:100%">
            <table class="table table-hover table-bordered" style="width:50%;">
                <tr>
                    @*<th>
        @Html.DisplayNameFor(model => model.PaperImageID)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.ImageAddress)
    </th>*@
                    <th>
                        Page Number:
                    </th>
                    @*<th>Upload New Image</th>*@
                    <th>Delete this Page</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.PaperImageID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImageAddress)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.PageNumber)
                        </td>
                        @*<td style="color:blue;">
                            <a style="color:blue;" href="@Url.Action("", "Admin", new { marqueeID = item.PaperImageID }) ">Upload New Image</a>
                        </td>*@
                        <td style="color:blue;">
                            <a style="color:blue;" href="@Url.Action("DeleteNewsPage", "Admin", new { pageNo = item.PageNumber })" onclick="return confirm('Are you sure to delete the Feedback?');">Delete</a>
                        </td>
                    </tr>
                }

            </table>
</div>
</center>
</div>