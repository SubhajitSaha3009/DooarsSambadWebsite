@model IEnumerable<Mvc_DooarsBangla.Models.AllNewsTableModel>

@{
    ViewBag.Title = "AllNews";
    Layout = "~/Views/Shared/_myLayoutPage_Admin.cshtml";
}

<div class="jumbotron" style="background-color:#f5fffa">
    <center>
        <div style="height:25px;"> </div>
        <i style="font-size:24px; color:green">@ViewBag.msg</i>
        <i style="font-size:24px; color:red">@ViewBag.emsg</i>
        <i style="font-size:24px; color:red; margin-top:30px;">@ViewBag.Nullmsg</i>
        <div style="height:15px;"> </div>
    </center>
    <center>
        <h2 style="margin-bottom:25px">All News</h2>
        <div style="overflow-x:scroll;width:100%">

            <table class="table table-hover table-bordered" style="width:70%;">
                <tr>
                    <th>
                        News Title
                    </th>
                    <th>
                        Category
                    </th>

                    <th>
                        Latest
                    </th>
                    <th>
                        Popular
                    </th>
                    <th>
                        Priority Of News
                    </th>

                    <th colspan="2">Action</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NewsTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.category)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.IsLatest)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsPopular)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PriorityOfNews)
                        </td>
                        <td>
                            <a style="color:blue" href="@Url.Action("UpdateNews", "Admin", new { id = item.NewsID })">Update</a>
                        </td>
                        <td>
                            <a style="color:blue" href="@Url.Action("DeleteNews", "Admin", new { id = item.NewsID})"  onclick="return confirm('Are you sure to delete the News?');">Delete</a>
                        </td>
                    </tr>
                }

            </table>
        </div>
</center>
</div>
