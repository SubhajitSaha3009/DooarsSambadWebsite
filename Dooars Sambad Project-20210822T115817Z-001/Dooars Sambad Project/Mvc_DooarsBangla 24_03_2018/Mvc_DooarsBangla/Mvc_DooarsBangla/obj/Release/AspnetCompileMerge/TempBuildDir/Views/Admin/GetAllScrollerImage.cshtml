@model IEnumerable<Mvc_DooarsBangla.Models.AddScrollerImageModel>

@{
    ViewBag.Title = "GetAllScrollerImage";
    Layout = "~/Views/Shared/_myLayoutPage_Admin.cshtml";
}


<div class="jumbotron" style="background-color:#f5fffa">
    <center>
        <h2 style="margin-bottom:25px">Scroller Image List</h2>
        <div style="overflow-x:scroll;width:100%">
            <table class="table table-hover table-bordered" style="width:70%;">
                <tr>
                    <th>
                            @Html.DisplayNameFor(model => model.ScrlImageID)
                        </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImageHeader)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImageDesc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImageAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Position)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                            @Html.DisplayFor(modelItem => item.ScrlImageID)
                        </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImageHeader)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImageDesc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImageAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td style="color:blue;">
                        <a style="color:blue;" href="@Url.Action("UploadScrImgFullNews", "Admin", new { ScrID = item.ScrlImageID }) ">Upload News</a>
                    </td>
                </tr>
                }

            </table>
        </div>
    </center>
</div>
